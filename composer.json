{
    "name": "marcingladkowski/gus-regon-bundle",
    "description": "Symfony bundle for GUS (Central Statistical Office) REGON API integration - Polish business registry lookup",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": ["symfony", "bundle", "gus", "regon", "poland", "business-registry", "api"],
    "authors": [
        {
            "name": "Marcin Gladkowski",
            "email": "marcin.gladkowski@example.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/framework-bundle": "^7.0",
        "symfony/dependency-injection": "^7.0",
        "symfony/config": "^7.0",
        "symfony/http-kernel": "^7.0",
        "symfony/cache": "^7.0",
        "gusapi/gusapi": "^6.3",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0",
        "symfony/phpunit-bridge": "^7.0",
        "symfony/var-dumper": "^7.0",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.92",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "MarcinGladkowski\\GusBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MarcinGladkowski\\GusBundle\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox",
        "stan": "phpstan analyse",
        "cs:fix": "php-cs-fixer fix",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "check": [
            "@cs:check",
            "@stan",
            "@test"
        ],
        "hooks:setup": "cp bin/pre-push .git/hooks/pre-push && chmod +x .git/hooks/pre-push"
    }, 
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
